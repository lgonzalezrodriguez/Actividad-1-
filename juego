import random
import time
print("¡Bienvenido al ahorcado!")
time.sleep(1)
cant = int(input("Ingrese qué nivel querés jugar (1, 2 o 3): "))
print("Tendrás 6 intentos para adivina")

while True:
    if cant == 1: 
        import random
        p = open("palabras1.txt")
        palabras = p.readlines()
        p.close()
        palabras = random.choice(palabras)

        break
    elif cant == 2:
        import random
        p = open("palabras2.txt")
        palabras = p.readlines()
        p.close()
        palabras = random.choice(palabras)
  
        break
    elif cant == 3:
        import random
        p = open("palabras3.txt")
        palabras = p.readlines()
        p.close()
        palabras = random.choice(palabras)
       
        break
    else: 
        print("El número ingresado no está disponible:")


intentos = 6
print("_" * len(palabras))
listaLetras = []


while True: 
    while True:
        letra = input("Adiviná una letra: ")
        print(palabras)
        if letra in palabras:
            print("Adivinaste una letra")
            letra.append(listaLetras)
            break
        elif intentos ==intentos - 1:
            print("No adivinaste la letra y perdiste un intento")
            break
        else:
            listaLetras== palabras
            print("Adivinaste la palabra")
            print(listaLetras)
        
        
