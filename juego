import random
import time
print("¡Bienvenido al ahorcado!")
time.sleep(1)
cant = int(input("Ingrese qué nivel querés jugar (1, 2 o 3): "))
time.sleep(1)
print("Tendrás 6 intentos para adivinr la palabra")
time.sleep(1)
print("")

while True:
    if cant == 1: 
        import random
        p = open("palabras1.txt")
        palabras = p.readlines()
        p.close()
        palabra = random.choice(palabras)
        palabra = palabras[0:len(palabras)-1]
        break
    elif cant == 2:
        import random
        p = open("palabras2.txt")
        palabras = p.readlines()
        p.close()
        palabra = random.choice(palabras)
        palabra = palabras[0:len(palabras)-1]
        break
    elif cant == 3:
        import random
        p = open("palabras3.txt")
        palabras = p.readlines()
        p.close()
        palabra = random.choice(palabras)
        palabra = palabras[0:len(palabras)-1]
        break
    else: 
        print("El número ingresado no está disponible:")

intentos = 6
letrasUtilizadas = []

while intentos > 0:
    errores = 0
    
    if letra in palabra:
        letrasUtilizadas.append(letra)
        print(letra, end="")
    else: 
        print("Te quedan 5 intentos")
        errores+=1
        
        
  print("_"*len(palabras)
