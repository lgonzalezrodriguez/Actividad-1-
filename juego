import random
import time
print("¡Bienvenido al ahorcado!")
time.sleep(1)
cant = int(input("¿Qué nivel te gustaría jugar? (1, 2 o 3): "))
time.sleep(1)
print("Te podés equivocar hasta 6 veces, si adivinás la letra no se pierden intentos")

while True:
    if cant == 1: 
        import random
        p = open("palabras1.txt")
        palabras = p.readlines()
        p.close()
        palabra = random.choice(palabras)
        break
    elif cant == 2:
        import random
        p = open("palabras2.txt")
        palabras = p.readlines()
        p.close()
        palabra = random.choice(palabras)
        break
    elif cant == 3:
        import random
        p = open("palabras3.txt")
        palabras = p.readlines()
        p.close()
        palabra = random.choice(palabras)
        break
    else: 
        print("El número ingresado no está disponible:")

intentos = 6
letrasUtilizadas = []
lista_guiones =  ("_ " * len(palabra)).split()

time.sleep(1)
letra = input("Ingresa una letra: ")

while True:
    for letra in palabra:
        if letra in palabra:
            posicion = palabra.index(letra)
            lista_guiones[posicion] = letra
            letrasUtilizadas.append(letra)
            print(lista_guiones)
        else: 
            print()
            intentos -= 1
